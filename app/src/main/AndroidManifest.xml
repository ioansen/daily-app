<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ioansen.today">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.TodayActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".activities.CollectionActivity"
            android:label="@string/recursive_goals"
            android:parentActivityName=".activities.TodayActivity">

        </activity>
        <activity
            android:name=".activities.CalendarActivity"
            android:label="@string/calendar"
            android:parentActivityName=".activities.TodayActivity">

        </activity>
        <activity android:name=".activities.AddGoalActivity"
            android:windowSoftInputMode="stateVisible"
            android:parentActivityName=".activities.TodayActivity"
            >

        </activity>
    </application>

</manifest>