<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_transparent_clikable_white_no_corners"
    android:padding="15dp">

    <ImageView
        android:id="@+id/label_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_fiber_manual_record_black_24dp"
        />

    <TextView
        android:id="@+id/label_text"
        android:textColor="#b0000000"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/label_clear"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_clear_white_24dp"
        />
</LinearLayout>